<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeLayout"
    android:background="#F8F8F8"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnAlphabet"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/app_alphabet"
        android:onClick="ActivityBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnNumbers"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/app_numbers"
        android:onClick="ActivityBtn"
        app:layout_constraintStart_toEndOf="@+id/btnAlphabet"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColors"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/app_colors"
        android:onClick="ActivityBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlphabet" />

    <Button
        android:id="@+id/btnStories"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/app_stories"
        android:onClick="ActivityBtn"
        app:layout_constraintStart_toEndOf="@+id/btnColors"
        app:layout_constraintTop_toBottomOf="@+id/btnNumbers" />

        <Button
            android:id="@+id/btnAnimals"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/app_animals"
            android:onClick="ActivityBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnColors" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/app_about_us"
            android:onClick="ActivityBtn"
            app:layout_constraintStart_toEndOf="@+id/btnAnimals"
            app:layout_constraintTop_toBottomOf="@+id/btnStories" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>